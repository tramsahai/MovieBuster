<?xml version="1.0" encoding="utf-8"?>
<!-- Add Movie Screen Layout - Form to add new movies -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Main container that holds all form elements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Screen title header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Movie"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textColor="#6200EE" />

        <!-- Label for movie title input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <!-- Input field for movie title -->
        <EditText
            android:id="@+id/etMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:hint="Enter movie title" />

        <!-- Label for director input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Director"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <!-- Input field for director name -->
        <EditText
            android:id="@+id/etDirector"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:hint="Enter director name" />

        <!-- Label for rating input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating (1-5)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <!-- Input field for rating -->
        <EditText
            android:id="@+id/etRating"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:hint="Enter rating 1-5" />

        <!-- Label for comments input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <!-- Larger input field for comments -->
        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="30dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:hint="Enter your comments about the movie" />

        <!-- Save button to add the movie -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Movie"
            android:textSize="18sp"
            android:background="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <!-- Cancel button to go back without saving -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cancel"
            android:textSize="18sp"
            android:background="#666666"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>